<style>

    #banner {
        border-bottom: 2px solid black;
        height: 650px;
        display: flex;
        justify-content: center;
        align-items: center;
        background-image: url({{'../assets/gradient.jpeg' | asset_url}});
        background-size: cover;
        background-attachment: fixed;
    }

