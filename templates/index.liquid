    }

    .banner-text p {
        font-size: clamp(22px, 2vw, 32px);
        width: 80%;
    }
    
    #about {
        border-top: 2px solid black;
        height: 700px;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    
    #newsletter {
        border-top: 2px solid black;
        height: 650px;
