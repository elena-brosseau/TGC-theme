
<div id="banner">
    <div class="banner-content">
        <div class="banner-img">

        </div>
        <div class="banner-text">
            {% if section.settings.headline != blank %}
                <h2>{{ section.settings.headline }}</h2>
            {% else %}
                <h2>Golden</h2>
            {% endif %}
            {% if section.settings.blurb != blank %}
                <p>{{ section.settings.blurb }}</p>
            {% else %}
                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
            {% endif %}
            {% if section.settings.link != blank %}
                <a href="{{ section.settings.link }}">
                    {% if section.settings.btn-txt != blank %}
                        <button>{{ section.settings.btn-txt }}</button>
                    {% else %}
                        <button>SHOP ALL</button>
                    {% endif %}
                </a>
            {% else %}
                <a href="./collections/">
                    {% if section.settings.btn-txt != blank %}
                        <button>{{ section.settings.btn-txt }}</button>
                    {% else %}
                        <button>SHOP ALL</button>
                    {% endif %}
                </a>
            {% endif %}
        </div>
    </div>
</div>

<style>

#banner {
    height: 110vh;
}

.banner-content {
    width: 100%;
    height: 100%;
}

.banner-img {
    width: 100%;
    height: calc(100vh - 100px);
    background-image: {% if section.settings.image != blank %}
                            url({{ section.settings.image.src | img_url: 'master' }})
                        {% else %}
                            url({{'../assets/banner-pic.jpg' | asset_url }})
                        {% endif %};
    background-size: cover;
    background-position-y: 25%;
}

.banner-text {
    width: 90%;
    height: fit-content;
    background-image: url({{'../assets/gradient.jpeg' | asset_url }});
    background-size: cover;
    background-attachment: fixed;
    padding: 10%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    border-radius: 15px;
    margin: 0 auto;
    position: relative;
    bottom: 30vh;
}

.banner-text h2 {
    font-size: clamp(40px, 7vw, 80px);
    font-style: italic;
    margin-bottom: 20px;
}

.banner-text p {
    font-size: 18px;
    line-height: 1.75;
    max-width: 400px;
}

.banner-text button {
    margin-left: 0;
}

@media screen and (min-width: 800px) {

    #banner {
        height: calc(100vh - 185px);
        min-height: 500px;
        margin-bottom: 50px;
    }

    .banner-content {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100%;
    }

    .banner-img {
        width: 50%;
        height: 100%
    }

    .banner-text {
        width: 50%;
        height: 100%;
        padding: 0 5%;
        border-radius: 0;position: static;
    }

}
</style>


{%  schema  %} 

    {
        "name": "Banner",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Featured Image"
                },
                {
                    "type": "text",
                    "id": "headline",
                    "label": "Headline"
                },
                {
                    "type": "text",
                    "id": "blurb",
                    "label": "Blurb"
                },
                {
                    "type": "text",
                    "id": "btn-txt",
                    "label": "Button Text"
                },
                {
                    "type": "text",
                    "id": "link",
                    "label": "Button Link"
                }
            ]
    }
    
    {% endschema %}