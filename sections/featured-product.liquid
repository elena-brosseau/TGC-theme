
<div class="product-feature">
    <a href="./collections/"><button><h2>SHOP ALL</h2></button></a>
    {% render 'product-preview' | product: section.settings.product %}
</div>

<style>

.product-feature {
    background-color: {{ section.settings.bg-color }};
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 50px 15vw;
        background-image: url({{'../assets/gradient.jpeg' | asset_url}});
        background-size: cover;
        background-attachment: fixed;
        margin-top: 50px;
    }

@media screen and (min-width: 600px) {
    
    .product-feature {
        flex-direction: row;
        justify-content: space-around;
    }   
    
    .product-feature .product-img {
        width: 30vw;
        max-width: 400px;
    }
}

</style>


{% schema %}
    {
        "name": "Featured Product",
        "settings": [
            {
                "type": "product",
                "id": "product",
                "label": "Product"
            },
            {
                "type": "color",
                "id": "bg-color",
                "label": "Background Color"
            }
        ]
    }
    {% endschema %}